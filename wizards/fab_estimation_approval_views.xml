<odoo>
    <record id="view_fab_estimation_approval_wizard" model="ir.ui.view">
        <field name="model">fab.estimation.approval.wizard</field>
        <field name="arch" type="xml">
            <form string="Estimation Approval">
                <group>
                    <field name="estimation_id"/>
                    <field name="action"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="do_approval" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>