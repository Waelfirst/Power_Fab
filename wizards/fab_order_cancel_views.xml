<odoo>
    <record id="view_fab_order_cancel_wizard" model="ir.ui.view">
        <field name="model">fab.order.cancel.wizard</field>
        <field name="arch" type="xml">
            <form string="Cancel Fabrication Order">
                <group>
                    <field name="fab_order_id"/>
                    <field name="reason"/>
                </group>
                <footer>
                    <button string="Cancel Order" type="object" name="cancel_order" class="btn-danger"/>
                    <button string="Close" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>