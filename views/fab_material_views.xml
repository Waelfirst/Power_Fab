<odoo>
    <record id="view_fab_material_tree" model="ir.ui.view">
        <field name="model">fab.material</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
                <field name="uom_id"/>
                <field name="cost"/>
            </tree>
        </field>
    </record>
    <record id="view_fab_material_form" model="ir.ui.view">
        <field name="model">fab.material</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="description"/>
                        <field name="uom_id"/>
                        <field name="cost"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_fab_material" model="ir.actions.act_window">
        <field name="name">Materials</field>
        <field name="res_model">fab.material</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>