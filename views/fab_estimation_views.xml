<odoo>
    <record id="view_fab_estimation_tree" model="ir.ui.view">
        <field name="model">fab.estimation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="project_id"/>
                <field name="customer_id"/>
                <field name="total_cost"/>
                <field name="selling_price"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="view_fab_estimation_form" model="ir.ui.view">
        <field name="model">fab.estimation</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_submit_for_approval" string="Submit for Approval" type="object"
                        invisible="state != 'draft'"/>
                    <button name="action_approve_estimation" string="Approve" type="object"
                        groups="power_fab_office.group_fab_estimation_approver"
                        invisible="state != 'submitted'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="project_id"/>
                        <field name="customer_id"/>
                    </group>
                    <group>
                        <field name="material_cost" readonly="1"/>
                        <field name="labor_cost"/>
                        <field name="machine_cost"/>
                        <field name="overhead_cost"/>
                        <field name="total_cost" readonly="1"/>
                        <field name="selling_price"/>
                        <field name="profit_margin" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="BoM">
                            <button name="open_import_bom_wizard"
                                type="object"
                                string="Import BoM from Excel"
                                class="btn-secondary"/>
                            <field name="bom_line_ids">
                                <tree editable="bottom">
                                    <field name="material_id"/>
                                    <field name="part_name"/>
                                    <field name="quantity"/>
                                    <field name="uom_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Part of Product">
                            <field name="part_line_ids">
                                <tree editable="bottom">
                                    <field name="part_name"/>
                                    <field name="description"/>
                                    <field name="quantity"/>
                                    <field name="uom_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Estimation Lines">
                            <field name="estimation_line_ids">
                                <tree editable="bottom">
                                    <field name="part_name"/>
                                    <field name="material_id"/>
                                    <field name="quantity"/>
                                    <field name="uom_id"/>
                                    <field name="selling_price"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_fab_estimation" model="ir.actions.act_window">
        <field name="name">Fabrication Estimations</field>
        <field name="res_model">fab.estimation</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>