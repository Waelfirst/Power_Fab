<odoo>
    <record id="view_fab_order_tree" model="ir.ui.view">
        <field name="model">fab.order</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="project_id"/>
                <field name="part_name"/>
                <field name="material_id"/>
                <field name="quantity"/>
                <field name="uom_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="view_fab_order_form" model="ir.ui.view">
        <field name="model">fab.order</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="project_id"/>
                        <field name="part_name"/>
                        <field name="material_id"/>
                        <field name="quantity"/>
                        <field name="uom_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_fab_order" model="ir.actions.act_window">
        <field name="name">Fabrication Orders</field>
        <field name="res_model">fab.order</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>